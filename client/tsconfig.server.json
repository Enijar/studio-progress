{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "server-build",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./server",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["server/**/*.ts"],
  "files": ["server/index.ts"]
}
